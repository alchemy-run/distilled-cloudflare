{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "openapi.patch.schema.json",
  "title": "OpenAPI Patch Schema",
  "description": "Schema for patching Cloudflare OpenAPI spec with missing or undocumented endpoints",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema file"
    },
    "paths": {
      "type": "object",
      "description": "Path items to add or merge into the OpenAPI spec",
      "additionalProperties": {
        "$ref": "#/definitions/pathItem"
      }
    },
    "components": {
      "type": "object",
      "description": "Components to add or merge into the OpenAPI spec",
      "properties": {
        "schemas": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/schemaObject"
          }
        }
      }
    }
  },
  "definitions": {
    "pathItem": {
      "type": "object",
      "properties": {
        "get": { "$ref": "#/definitions/operationObject" },
        "post": { "$ref": "#/definitions/operationObject" },
        "put": { "$ref": "#/definitions/operationObject" },
        "patch": { "$ref": "#/definitions/operationObject" },
        "delete": { "$ref": "#/definitions/operationObject" },
        "parameters": {
          "type": "array",
          "items": { "$ref": "#/definitions/parameterObject" }
        }
      }
    },
    "operationObject": {
      "type": "object",
      "required": ["operationId"],
      "properties": {
        "operationId": {
          "type": "string",
          "description": "Unique identifier for this operation"
        },
        "summary": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "parameters": {
          "type": "array",
          "items": { "$ref": "#/definitions/parameterObject" }
        },
        "requestBody": {
          "$ref": "#/definitions/requestBodyObject"
        },
        "responses": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/responseObject"
          }
        }
      }
    },
    "parameterObject": {
      "type": "object",
      "required": ["name", "in"],
      "properties": {
        "name": { "type": "string" },
        "in": {
          "type": "string",
          "enum": ["path", "query", "header", "cookie"]
        },
        "required": { "type": "boolean" },
        "description": { "type": "string" },
        "schema": { "$ref": "#/definitions/schemaObject" }
      }
    },
    "requestBodyObject": {
      "type": "object",
      "properties": {
        "required": { "type": "boolean" },
        "description": { "type": "string" },
        "content": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "schema": { "$ref": "#/definitions/schemaObject" }
            }
          }
        }
      }
    },
    "responseObject": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "content": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "schema": { "$ref": "#/definitions/schemaObject" }
            }
          }
        }
      }
    },
    "schemaObject": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "integer", "boolean", "array", "object", "null"]
        },
        "$ref": { "type": "string" },
        "properties": {
          "type": "object",
          "additionalProperties": { "$ref": "#/definitions/schemaObject" }
        },
        "required": {
          "type": "array",
          "items": { "type": "string" }
        },
        "items": { "$ref": "#/definitions/schemaObject" },
        "additionalProperties": {
          "oneOf": [
            { "type": "boolean" },
            { "$ref": "#/definitions/schemaObject" }
          ]
        },
        "enum": {
          "type": "array"
        },
        "format": { "type": "string" },
        "description": { "type": "string" },
        "default": {},
        "nullable": { "type": "boolean" },
        "allOf": {
          "type": "array",
          "items": { "$ref": "#/definitions/schemaObject" }
        },
        "oneOf": {
          "type": "array",
          "items": { "$ref": "#/definitions/schemaObject" }
        },
        "anyOf": {
          "type": "array",
          "items": { "$ref": "#/definitions/schemaObject" }
        }
      }
    }
  }
}
